<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_upload"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:descendantFocusability="beforeDescendants"
    android:focusableInTouchMode="true"
    android:background="@drawable/gradient"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sebas.trade.Upload">

    <!--<Button-->
    <!--android:id="@+id/uploadButton"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content"-->
    <!--android:layout_alignParentEnd="true"-->
    <!--android:layout_alignParentStart="true"-->
    <!--android:layout_above="@id/bottomBar"-->
    <!--android:background="@color/colorAccent"-->
    <!--android:text="@string/upload" />-->

    <RelativeLayout
        android:id="@+id/bottomBarUpload"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true">

        <android.support.design.widget.BottomNavigationView
            android:id="@+id/bottomNavView_Bar_Upload"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#efefef"
            app:menu="@menu/bottom_naviagtion_menu_upload_page">

        </android.support.design.widget.BottomNavigationView>

    </RelativeLayout>

    <EditText
        android:id="@+id/itemDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/input_outine"
        android:ems="10"
        android:gravity="center_vertical|center"
        android:hint="@string/what_s_your_item_like"
        android:inputType="textCapSentences"
        android:padding="15dp"
        android:text=""
        android:textColorHint="@color/colorAccent"
        android:textColor="?attr/colorAccent"
        android:layout_above="@+id/bottomBarUpload"
        android:layout_alignParentStart="true"
        android:layout_margin="10dp"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/itemName"
        style="@style/Widget.AppCompat.EditText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/input_outine"
        android:ems="10"
        android:gravity="center_vertical|center"
        android:hint="@string/what_are_you_swapping"
        android:inputType="textCapWords"
        android:padding="15dp"
        android:text=""
        android:textColor="?attr/colorAccent"
        android:textColorHint="@color/colorAccent"
        android:layout_above="@+id/itemDescription"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_margin="10dp"/>

    <ImageView
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/ic_add_a_photo_white_24dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="33dp" />

</RelativeLayout>